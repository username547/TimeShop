@model TimeShop.Areas.User.Models.DTO.SignupRequest

@{
	ViewData["Title"] = "Create";
}

<h2>Create manager</h2>
<form asp-area="admin" asp-controller="Manager" asp-action="Create">
	<div class="form-group">
		<label asp-for="Name">Name</label>
		<input type="text" asp-for="Name">
		<span asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="Surname">Surname</label>
		<input type="text" asp-for="Surname">
		<span asp-validation-for="Surname"></span>
	</div>
	<div class="form-group">
		<label asp-for="Email">Email</label>
		<input type="text" asp-for="Email">
		<span asp-validation-for="Email"></span>
	</div>
	<div class="form-group">
		<label asp-for="Password">Password</label>
		<input type="text" asp-for="Password">
		<span asp-validation-for="Password"></span>
	</div>
	<div class="form-group">
		<label asp-for="ConfirmPassword">Confirm Password</label>
		<input type="text" asp-for="ConfirmPassword">
		<span asp-validation-for="ConfirmPassword"></span>
	</div>
	<button type="submit">Submit</button>
</form>