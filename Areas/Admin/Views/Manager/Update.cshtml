@model TimeShop.Areas.User.Models.UserModel

@{
	ViewData["Title"] = "Update";
}

<h2>Update manager</h2>
<form asp-area="admin" asp-controller="Manager" asp-action="Update">
	<div class="form-group">
		<label asp-for="UserId">User id</label>
		<input type="text" readonly asp-for="UserId">
	</div>
	<div class="form-group">
		<label asp-for="UserName">Name</label>
		<input type="text" asp-for="UserName">
		<span asp-validation-for="UserName"></span>
	</div>
	<div class="form-group">
		<label asp-for="UserSurname">Surname</label>
		<input type="text" asp-for="UserSurname">
		<span asp-validation-for="UserSurname"></span>
	</div>
	<div class="form-group">
		<label asp-for="UserEmail">Email</label>
		<input type="text" asp-for="UserEmail">
		<span asp-validation-for="UserEmail"></span>
	</div>
	<input hidden asp-for="UserPasswordHash">
	<input hidden asp-for="RoleId">
	<button type="submit">Submit</button>
</form>