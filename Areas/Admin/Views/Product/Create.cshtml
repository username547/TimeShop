@* @model TimeShop.Areas.User.Models.DTO.ProductRequest *@
@model TimeShop.Areas.User.Models.ProductModel
@{
	ViewData["Title"] = "Create";
}

<h2>Create product</h2>

<form method="post" enctype="multipart/form-data" asp-area="admin" asp-controller="product" asp-action="create">
	<div class="form-group">
		<label asp-for="ProductName">Product name</label>
		<input type="text" asp-for="ProductName">
		<span asp-validation-for="ProductName"></span>
	</div>
	<div class="form-group">
		<label asp-for="ProductPrice">Product price</label>
		<input type="text" asp-for="ProductPrice">
		<span asp-validation-for="ProductPrice"></span>
	</div>
	<div class="form-group">
		<label for="image">Product image</label>
		<input type="file" name="image">
	</div>
	<button type="submit">Create</button>
</form>