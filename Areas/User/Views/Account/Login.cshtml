@model LoginRequest

@{
	ViewData["Title"] = "Login";
}

<div class="container justify-content-center" style="width: 500px">
    <h2 class="display-6 text-center">Авторизация</h2>
    <form asp-area="User" asp-controller="Account" asp-action="Login" class="row">
        <div class="col-12 mb-2">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="text" asp-for="Email" placeholder="example@mail.ru" class="form-control">
        </div>
        <div class="col-12 mb-2">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <div class="col-12 d-flex flex-row justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary">Войти</button>
            <a asp-area="User" asp-controller="Account" asp-action="Signup" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Зарегистрироваться</a>
        </div>
    </form>
</div>
